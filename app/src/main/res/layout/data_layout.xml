<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp" />

    <Button
        android:id="@+id/delete_sound"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/welcomeTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="-79dp"
        android:layout_marginEnd="109dp"
        android:textAppearance="@style/ButtonTextStyle2"
        android:background="@drawable/rectangle_1"
        android:text="Delete Sound Data" />

    <Button
        android:id="@+id/delete_wifi"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/delete_sound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/ButtonTextStyle2"
        android:background="@drawable/rectangle_1"
        android:text="Delete wifi data" />

    <Button
        android:id="@+id/delete_signal"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/delete_wifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/ButtonTextStyle2"
        android:background="@drawable/rectangle_1"
        android:text="Delete signal data" />

</RelativeLayout>
